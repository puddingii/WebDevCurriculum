body.text-center
  main.form-signin
    form(method= "post")
      h1.h3.mb-3.fw-normal Login
      h3.mb-3.errorMsg=errorMsg
      .form-floating
        input#floatingInput.form-control(type='email' name="loginId" placeholder='name@example.com')
        label(for='floatingInput') Email address
      .form-floating
        input#floatingPassword.form-control(type='password' name="loginPassword" placeholder='Password')
        label(for='floatingPassword') Password

      button.w-100.btn.btn-lg.btn-primary(type='submit') Sign in
